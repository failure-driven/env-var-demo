<h1>ENV VARS</h1>

<h2>Rails Credentials</h1>
<code>
  <%= @rails_credentials
    .gsub(" ", "&nbsp;")
    .gsub("\n", "<br />").html_safe
  %>
</code>

<h2>Env Vars</h1>
<% @env_vars.each do |key, value| %>
  <div style="display: flex; padding-bottom: 1em;">
    <div style="flex: 1;">
      <strong><%= key %></strong>
    </div>
    <div style="flex: 1; padding-left: 1em;">
      <%= value %>
    </div>
  </div>
<% end %>

<h2>Files at rest</h2>
<ul>
  <% %w[
    .env
    .env.development
    .env.local
    config/master.key
    config/credentials.yml.enc
    env/prod/env.secrets
    env/prod.ejson
    env/ejson_keydir/7baa8909f86cc0e5615fdaec4262ca050b48a0e55b0416931f19d4924ff54428
  ].each do |filename| %>
    <li style="padding-bottom: 1em;">
      <%= link_to read_file_demos_path(filename: filename) do %>
        <%= filename %>
      <% end %>
    </li>
  <% end %>
</ul>
