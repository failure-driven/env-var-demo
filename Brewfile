# mange dependencies with brew https://brew.sh/

brew "jq"               # Lightweight and flexible command-line JSON processor

# SOPS
brew "sops"             # Editor of encrypted files

# Ansible and ansible vault
brew "ansible"          # Automate deployment, configuration, and upgrading

# EJson
tap "shopify/shopify"   # Shopify publishes EJSON
brew "ejson"            # EJSON is a small library to manage encrypted secrets
                        # using asymmetric encryption.
brew "ejson2env"        # EJSON is a small library to manage encrypted secrets
                        # using asymmetric encryption.

# Slides
brew "slides"           # Terminal based presentation tool
                        # https://github.com/maaslalani/slides
brew "tree"             # Display directories as trees (with optional
                        # color/HTML output)
                        # http://mama.indstate.edu/users/ice/tree/
